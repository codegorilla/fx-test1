<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.esri.arcgisruntime.mapping.view.MapView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane
    xmlns:fx="http://javafx.com/fxml"
    prefHeight="400.0"
    prefWidth="600.0"
    fx:controller="sample.Controller">
  <top>
    <VBox>
      <children>
        <MenuBar fx:id="menuBar">
          <menus>
            <Menu text="File">
              <items>
                <MenuItem text="New" />
                <MenuItem text="Open" />
                <SeparatorMenuItem />
                <MenuItem fx:id="miExit" text="Exit" onAction="#handleExit" />
              </items>
            </Menu>
            <Menu text="Edit">
              <items>
                <MenuItem text="Copy" />
                <MenuItem text="Cut" />
                <MenuItem text="Paste" />
              </items>
            </Menu>
            <Menu text="View">
              <items>
                <MenuItem text="Fullscreen" />
              </items>
            </Menu>
            <Menu text="Help">
              <items>
                <MenuItem text="About" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <ToolBar>
          <items>
            <Button>
              <graphic>
                <FontIcon iconLiteral="fa-file-o" iconSize="24" />
              </graphic>
            </Button>
            <Button
                fx:id="btnZoomIn" 
                onAction="#handleZoomIn">
              <graphic>
                <FontIcon iconLiteral="fa-search-plus" iconSize="24" />
              </graphic>
            </Button>
            <Button
                fx:id="btnZoomOut"
                onAction="#handleZoomOut">
              <graphic>
                <FontIcon iconLiteral="fa-search-minus" iconSize="24" />
              </graphic>
            </Button>
          </items>
        </ToolBar>
      </children>
    </VBox>
  </top>
  <left>
    <fx:include source="test.fxml" />
  </left>
  <center>
    <SplitPane fx:id="sp" />
      <items>
        <VBox fx:id="vb">
          <children>
            <Button fx:id="btnTest1" text="Left" />
          </children>
        </VBox>
        <MapView fx:id="mapView" />
      </items>
  </center>
  <bottom>
    <HBox>
      <children>
        <Label text="I love pie"/>
        <Button fx:id="btnSubmit" text="Submit" onAction="#handleButtonAction" />
      </children>
    </HBox>
  </bottom>
</BorderPane>
